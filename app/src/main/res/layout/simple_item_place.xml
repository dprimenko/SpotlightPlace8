<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cw_item_place"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imv_item_places_list_simple"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            />

        <RelativeLayout
            android:id="@+id/rl_data_item_places_list_simple"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/imv_item_places_list_simple">

            <TextView
                android:id="@+id/txv_title_item_places_list_simple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                />

            <TextView
                android:id="@+id/txv_description_item_places_list_simple"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txv_title_item_places_list_simple"
                android:textSize="16sp"
                android:textColor="@color/colorSecondaryText"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_address_item_places_list_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@id/rl_data_item_places_list_simple">

            <ImageView
                android:id="@+id/imv_icon_address_item_places_list_simple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="top"
                android:src="@drawable/ic_map_marker"/>

            <TextView
                android:id="@+id/txv_address_item_places_list_simple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:textColor="@color/colorText"/>
        </LinearLayout>
        <View
            android:layout_below="@id/ll_address_item_places_list_simple"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>